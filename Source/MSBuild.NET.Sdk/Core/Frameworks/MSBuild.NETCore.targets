<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup Condition="'$(ImplicitPackageName)' == ''">
		<ImplicitPackageName>Microsoft.NETCore.UniversalWindowsPlatform</ImplicitPackageName>
	</PropertyGroup>

	<!--
		Set the default versions of the Microsoft.NETCore.UniversalWindowsPlatform packages to reference.
		The implicit package references are defined in MSBuild.NET.Sdk.props, so that they can be overridden in the project file.
	-->

	<!--
		Determine the ImplicitPackageVersion when targeting .NET Core for UWP

		When targeting .NET Core for UWP, the TargetPlatformMinVersion is generally used to specify which version of the runtime to use.

		In order to target a specific patch version, or to float the version number (6.0-*), the ImplicitPackageVersion
		property can be used.

		The framework version that is written to the runtimeconfig.json file is based on the actual resolved package version
		of Microsoft.NETCore.UniversalWindowsPlatform. This is to allow floating the verion number.

		If ImplicitPackageVersion is not specified, the following logic applies:

		- When targeting .NET Core for UWP 5.0 or higher (Windows 10):
		- Apps uses the latest of the first publically avaialble major version.

		- When targeting .NET Core for UWP 4.5.x (Windows 8.x):
		- Apps don't have UWP Packages since it comes from the SDK.
	-->
	<Choose>
		<!-- If the ImplicitPackageVersion is already set, do nothing -->
		<When Condition="'$(ImplicitPackageVersion)' != ''" />

		<When Condition="$(_TargetFrameworkVersionWithoutV.StartsWith('4.5'))">
			<PropertyGroup>
				<DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
			</PropertyGroup>
		</When>
		<When Condition="'$(_TargetFrameworkVersionWithoutV)' == '5.0'">
			<PropertyGroup>
				<ImplicitPackageVersion>5.4.1</ImplicitPackageVersion>
			</PropertyGroup>
		</When>
		<When Condition="'$(_TargetFrameworkVersionWithoutV)' == '6.0'">
			<PropertyGroup>
				<ImplicitPackageVersion>6.0.2</ImplicitPackageVersion>
			</PropertyGroup>
		</When>

		<!-- If not covered by the previous cases, use the target framework version for the ImplicitPackageVersion -->
		<Otherwise>
			<PropertyGroup>
				<ImplicitPackageVersion>$(_TargetFrameworkVersionWithoutV)</ImplicitPackageVersion>
			</PropertyGroup>
		</Otherwise>
	</Choose>

	<Import Project="$(MSBuildThisFileDirectory)MSBuild.NET.Defaults.targets" />

	<PropertyGroup>
		<MSBuildAllProjects>$(MSBuildAllProjects);$(MSBuildThisFileFullPath)</MSBuildAllProjects>
	</PropertyGroup>

</Project>