<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<MSBuildAllProjects>$(MSBuildAllProjects);$(MSBuildThisFileFullPath)</MSBuildAllProjects>
	</PropertyGroup>

	<PropertyGroup>
		<!--
			If LanguageTargets isn't otherwise set, then just import the common targets.
			This should allow the restore target to run, which could bring in NuGet packages that sets the LanguageTargets.
			This means support for different languages could either be supplied via an SDK or a NuGet package.
		-->
		<LanguageTargets Condition="'$(LanguageTargets)' == ''">$(MSBuildThisFileDirectory)MSBuild.NET.Language.Common.targets</LanguageTargets>
	</PropertyGroup>

</Project>