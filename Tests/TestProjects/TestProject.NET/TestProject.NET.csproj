<Project Sdk="MSBuild.NET.Extras.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard1.0;netstandard2.0</TargetFrameworks>
		<TargetFrameworks>$(TargetFrameworks);netcoreapp1.0;netcoreapp2.0</TargetFrameworks>
		<TargetFrameworks>$(TargetFrameworks);net40;net47</TargetFrameworks>
		<TargetFrameworks>$(TargetFrameworks);uap10.0;uap10.0.16299</TargetFrameworks>
		<TargetFrameworks>$(TargetFrameworks);monoandroid;xamarin.ios;xamarin.mac</TargetFrameworks>
		<TargetFrameworks>$(TargetFrameworks);tizen30;tizen40</TargetFrameworks>
		<!--<TargetFrameworks>$(TargetFrameworks);net20;net35</TargetFrameworks>-->
		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<PropertyGroup Condition="$(TargetFramework) == 'netcoreapp2.1'">
		<ImplicitFrameworkPackageVersion>2.1.0-*</ImplicitFrameworkPackageVersion>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.App" Version="$(ImplicitFrameworkPackageVersion)" IsImplicitlyDefined="true" Condition="$(TargetFramework) == 'netcoreapp2.1'"/>
		<PackageReference Update="Tizen.NET" Version="3.0.0" Condition="'$(TargetFramework)' == 'tizen30'"/>
		<PackageReference Include="Tizen.NET.Sdk" Version="1.0.1" Condition="$(TargetFramework.StartsWith('tizen'))"/>
	</ItemGroup>

</Project>